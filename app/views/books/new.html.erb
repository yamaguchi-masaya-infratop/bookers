<h1>新規投稿</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
        <%= @list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>本のタイトル</h4>
    <%= f.text_field :title %>
    
    <h4>感想</h4>
    <%= f.text_area :body %>
    
    <%= f.submit '投稿' %>
<% end %>
